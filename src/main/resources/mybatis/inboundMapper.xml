<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.inboundMapper">
    <insert id="insert" parameterType="InboundDto">
        <selectKey keyProperty="inbound_id" resultType="int" order="BEFORE">
            SELECT inbound_seq.NEXTVAL FROM dual
        </selectKey>
        insert into inbound
        (
            inbound_id,
            webuser_id,
            request_date,
            approval_status,
            is_refund,
            <if test="lot_out_id != null">
                , lot_out_id
            </if>
        )
        values (
            inbound_id,
            #{webuser_id},
            sysdate,
            'REQUEST',
            #{is_refund},
            <if test="lot_out_id != null">
                , #{lot_out_id}
            </if>
        )
    </insert>
</mapper>